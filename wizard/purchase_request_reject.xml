<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="purchase_request_reject_wizard_form" model="ir.ui.view">
            <field name="name">purchase.request.reject.wizard.form</field>
            <field name="model">purchase.request.reject</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Purchase Request Reject">
                    <group>
                        <field name="reject_reason"/>
                    </group>
                    <footer>
                        <button name="action_confirm" class="oe_highlight" string="Confirm"
                                type="object"/>
                        <button string="Cancel" class="oe_highlight" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>